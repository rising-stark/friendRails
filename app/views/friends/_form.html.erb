<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :first_name, class:"col-sm-2 col-form-label" %>
    <%= form.text_field :first_name, class:"form-control", placeholder:"Enter First Name", required:true, autofocus:true %>
  </div> 

  <div class="field form-group">
    <%= form.label :last_name, class:"col-sm-2 col-form-label" %>
    <%= form.text_field :last_name, class:"form-control", placeholder:"Enter First Name" %>
  </div>

  <div class="field form-group">
    <%= form.label :email, class:"col-sm-2 col-form-label" %>
    <%= form.text_field :email, class:"form-control", placeholder:"Enter Email Address like abc@example.com", required:true %>
  </div>

  <div class="field form-group">
    <%= form.label :phone, class:"col-sm-2 col-form-label" %>
    <%= form.text_field :phone, class:"form-control", placeholder:"Enter Phone Like 8872040704", required:true%>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
